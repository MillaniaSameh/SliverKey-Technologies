<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FavoriteFeedsWithHTMX</title>
    <script src="https://unpkg.com/htmx.org@1.9.2"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FavoriteFeedsWithHTMX.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3n fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">FavoriteFeedsWithHTMX</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">All Feeds</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/FavoriteFeeds">Favorite Feeds</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark"  
                                hx-get="/Index?handler=UpdateContent&mainPage=true" 
                                hx-trigger="click"
                                hx-target="#content-container" 
                                hx-swap="innerHTML">
                                All Feeds
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  
                                hx-get="/Index?handler=UpdateContent&mainPage=false" 
                                hx-trigger="click"
                                hx-target="#content-container" 
                                hx-swap="innerHTML">
                                Favorite Feeds
                            </a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top: 100px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>