@inherits LayoutComponentBase

<div class="page @(_language=="ar" ? "arabic": "")">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AccessControl />
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private string _language = CultureInfo.CurrentCulture.Name.ToString();
}
